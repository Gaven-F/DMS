@inject ILogger<Home> Logger
@inject IJSRuntime JS


<header class="d-flex flex-shrink-0 align-items-center justify-content-center">
	<a class="title link-underline link-underline-opacity-0 text-white" href="">DMS CLIENT</a>

	<button class="menu-btn btn btn-outline-secondary px-4 ms-auto me-0" @onclick="ToggerMenu">
